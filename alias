alias v='vagrant'
alias vp='vagrant provision'
alias vs='vagrant ssh'
alias vd='vagrant destroy'
alias vu='vagrant up'
alias vr='vagrant reload'
alias vr='vagrant destroy'
alias vf='vagrant up || vagrant provision && vagrant ssh'

# Git
alias gpom='git push origin master'

# Bundler
alias be='bundle exec'
alias bu='bundle update'
alias bi='bundle install --clean'
alias bc='bundle clean --force'

# mvn
alias mt='JAVA_HOME=/System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home/ mvn test -Dtest.env=test -DjvmArgs="-Djava.awt.headless=true -Xmx1024m -XX:MaxPermSize=256m -Xss512m" || mvn surefire-report:report-only -DshowSuccess=false && open target/site/surefire-report.html'
alias mtq='JAVA_HOME=/System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home/ mvn test -Dtest.env=test -Dliquibase.should.run=false -DjvmArgs="-Djava.awt.headless=true -Xmx1024m -XX:MaxPermSize=256m -Xss512m" || mvn surefire-report:report-only -DshowSuccess=false && open target/site/surefire-report.html'

# Tmuxinator
alias pro='tmuxinator start'
alias mux='tmuxinator start'

alias gtags='ctags -f ./tags -R --langmap="ruby:+.rake.builder.jbuilder.rjs" --languages=-javascript ./ $GEM_HOME'

alias jenkins='java -jar ~/lib/jenkins-cli.jar -s https://ci.ncsasports.org/'

alias vimr='open -a VimR'

# Emacs daemon mode
alias ec='/usr/bin/env emacsclient -c -a "" -n'
alias et='/usr/bin/env emacsclient -t -a ""'

